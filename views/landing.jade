              (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
              m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
              })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

              ga('create', 'UA-44994249-1', 'cannedhead.com');
              ga('send', 'pageview');

            // Remove no-script background image
            document.body.style.backgroundImage = 'none';

            // Avoid cropped background when the page has y-overflow
            fixBackgroundHeight();

            window.onresize = function()
            {
                var wh = $(window).height();
                var ww = $(window).width();
                var ratio = wh/ww;

                // Avoid cropped background when the page has y-overflow
                fixBackgroundHeight();

                // Resize the background items
                if(!mobileCheck())
                {
                    sizeVideoBg(ratio);
                    sizeVideo(ratio);
                }
                else
                {
                    sizeImage(ratio);
                }
            };

            // Load first video
            loadMediaFirst();

            // Waits till the page ends loading
            $(window).bind('load', function()
            {
                // Avoid cropped background when the page has y-overflow
                fixBackgroundHeight();

                // Start to load the assets
                loadMediaSecond();

                setTimeout("first_slide_ocurred = true;", 4300);

                setTimeout(function()
                {
                    if(first_video_loaded && second_video_loaded)
                    {
                        console.log('Enough bandwidth to load videos');
                        enough_bw = true;
                    }
                    else
                    {
                        $('video').html('');
                    }
                }, 4600);

                if(!mobileCheck())
                {
                    loopVideo();
                }
                else
                {
                    loopImage();
                }
            });
        
